<%= render "shared/errors", obj: @article %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html =>{class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
    <div class="control-label  col-sm-2">
      <%= f.label "titulo" %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control", placeholder: "Titulo do artigo", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label  col-sm-2">
      <%= f.label "descrição" %>
    </div>
    <div class="col-sm-8">
      <%= f.text_area :description,rows: 10, class: "form-control", placeholder: "escreva seu artigo" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4"></div>
      [<%= link_to "Cancelar e Voltar a lista de artigos", articles_path %> ]
    </div>
  </div>
</div>
